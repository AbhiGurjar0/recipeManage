<script>
    function togggle(element, id) {
        document.querySelectorAll('.content').forEach((ele) => {
            ele.classList.add('hidden');
        })
        document.getElementById(id).classList.remove('hidden');

    }
    async function Approve(ele, Id) {
        console.log(Id)

        try {
            const res = await fetch(`/admin/approveUser`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ Id }),
            });

            const data = await res.json();

            if (data.success) {
                ele.classList.add('hidden');
            } else {
                console.error("Approval failed:", data.message);
            }
        } catch (err) {
            console.error("Error approving user:", err);
        }
    }
    async function Ban(ele, Id) {
        console.log(Id)

        try {
            const res = await fetch(`/admin/banUser/${Id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                // body: JSON.stringify({ Id }),
            });

            const data = await res.json();

            if (data.success) {
                ele.classList.add('hidden');
            } else {
                console.error("Approval failed:", data.message);
            }
        } catch (err) {
            console.error("Error approving user:", err);
        }
    }


    async function unBan(ele, Id) {
        console.log(Id)

        try {
            const res = await fetch(`/admin/unbanUser/${Id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                // body: JSON.stringify({ Id }),
            });

            const data = await res.json();

            if (data.success) {
                ele.classList.add('hidden');
            } else {
                console.error("Approval failed:", data.message);
            }
        } catch (err) {
            console.error("Error approving user:", err);
        }
    }
    async function deleteUser(ele, Id) {
        console.log(Id)

        try {
            const res = await fetch(`/admin/deleteUser/${Id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            });

            const data = await res.json();

            if (data.success) {
                window.location.href='/admin'
            } else {
                console.error("Approval failed:", data.message);
            }
        } catch (err) {
            console.error("Error approving user:", err);
        }
    }
</script>

